{
  "name": "Exposed: who knows what about you",
  "version": "1.0",
  "description": "Tracking what entities have what information about you.",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs",
    "<all_urls>",
    "webRequest"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "chrome_url_overrides":  {
    "newtab": "overview.html"
  },
  "content_security_policy": "object-src 'self'; script-src 'self' 'sha256-x4F+86ypcCpLw83Chfsp2esWzAaA3g0ZW/dskTo6K94=' https://unpkg.com/",
  "content_scripts": [
   {
     "matches": [
            "http://*/*",
            "https://*/*"
            ],
     "js": ["content.js"],
     "run_at": "document_end"
   }
 ],
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "manifest_version": 2
}
